/* theme.css.liquid */

/* General Styles */
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
}

/* Header Styles */
header {
  background-color: #f8f9fa;
  border-bottom: 1px solid #e0e0e0;
  padding: 10px 0;
}

.header-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

/* Logo Styles */
.logo {
  font-size: 24px;
  font-weight: bold;
  flex: 1;
}

/* Navigation Styles */
.main-navigation {
  flex: 2;
  text-align: center;
}

.main-menu {
  display: inline-block;
  list-style: none;
  padding: 0;
  margin: 0;
}

.main-menu li {
  display: inline;
  margin: 0 15px;
}

.main-menu a {
  text-decoration: none;
  color: #333;
  font-weight: 500;
}

.main-menu a:hover {
  color: #007bff;
}

/* Header Right Section */
.header-right {
  display: flex;
  align-items: center;
  gap: 20px; /* Adjust the gap as needed */
}

/* Search Bar Styles */
.search-form {
  display: flex;
  align-items: center;
}

.search-input {
  padding: 5px 10px;
  border: 1px solid #ccc;
  border-radius: 4px 0 0 4px;
}

.search-button {
  padding: 6px 12px;
  border: 1px solid #007bff;
  border-left: none;
  background-color: #007bff;
  color: white;
  border-radius: 0 4px 4px 0;
  cursor: pointer;
}

.search-button:hover {
  background-color: #0056b3;
}

/* Cart Icon Styles */
.cart-icon {
  position: relative;
}

.cart-icon img {
  width: 30px;
  height: 30px;
}

.cart-count {
  position: absolute;
  top: -5px;
  right: -10px;
  background-color: red;
  color: white;
  border-radius: 50%;
  padding: 2px 6px;
  font-size: 12px;
}
